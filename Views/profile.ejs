<!DOCTYPE html>
<html>

<head>
    <!--Bootstrap 5-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!--Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inder&display=swap" rel="stylesheet">
    <!--jQuery-->
    <script src="../js/jquery-3.6.1.min.js"></script>
    <!--font awesome-->
    <script src="https://kit.fontawesome.com/f3347210b3.js" crossorigin="anonymous"></script>
    <!--Custom CSS-->
    <link rel="stylesheet" type="text/css" href="../css/index.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>John Doe's Profile</title>
    <style type="text/css">
        .centers {
            align-items: center;
        }
    </style>
</head>

<body style="min-width: 800px;">
    <!-- Header -->
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">PROFESSORS TO PICK</a>
        </div>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
            <li class="nav-item">
                <a class="nav-link" href='/entry'>Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='/about'>About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href='/profile'>Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/catalog">Catalog</a>
            </li>
            <li class="nav-item">
                <div class="dropdown">
                    <a class="navbar-brand" data-bs-toggle="dropdown" data-bs-display="static"><img class="nav-profile" src="<%=session.picture==null?'../assets/default.jpg':'../pictures/'+session.picture%>"></a>
                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" data-bs-popper="static" style="width: 15rem;">
                        <li>
                            <div class="dropdown-item">

                                <div class="form-check form-switch">
                                    <input class="form-check-input" id="dark-mode" type="checkbox">
                                </div>
                                <label for="dark-mode"><i class="popup-icon fa-solid fa-moon"></i>Dark Mode</label>
                            </div>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item" href="/edit_profile"><i class="popup-icon fa-solid fa-pen-to-square "></i>Edit Profile</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/add_prof"><i class="popup-icon fa-solid fa-plus"></i>Add Professor</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/"><i class="popup-icon fa-solid fa-right-from-bracket "></i>Log Out</a>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
    </nav>
    <!-- Body -->
    <div class="body">
        <div class="linear-gradient">
            <div class="container">
                <div class="p-5 d-flex">
                    <div class="img-form me-5">
                        <img id="uploadPreview" src="assets/default.jpg" />
                    </div>
                    <div class="flex-grow-1">
                        <h1 class="color-white">
                            <div class="d-inline" id="name"></div>
                            <%if(profile == undefined || profile==session.user_id){%>
                                <a class="color-white link-white float-end" href="/edit_profile"><i class="fa-solid fa-pen-to-square"></i></a>
                                <%}%>
                        </h1>
                        <h2 class="color-white" id="bio"></h2>
                        <hr class="bg-white me-3">
                        <p class="profile-main color-white" id="school"></p>
                        <p class="profile-main color-white" id="course"></p>
                        <p class="profile-main color-white" id="year"></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="review text-center pt-5">
                <h2>Professor Reviews</h2>
            </div>
            <div id="reviews">
            </div>
        </div>
    </div>

</body>
<script type="text/javascript" src="../js/script.js"></script>

</html>
<script type="text/javascript">
    $(document).ready(() => {
        <%if(profile == undefined){%>
        load_data({
            id: <%=session.user_id%>,
            user: <%=session.user_id%>,
            load: 5
        });
        <%}else{%>
        load_data({
            id: <%=profile%>,
            user: <%=session.user_id%>,
            load: 5
        });
        <%}%>
    });
</script>